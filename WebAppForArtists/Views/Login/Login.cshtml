@model WebAppForArtists.User

@{
    ViewBag.Title = "Login";
}

<h2>Log in your Space:</h2>


@using (Html.BeginForm("Login", "Login", FormMethod.Post)) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(a => a.FirstName, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(a => a.FirstName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(a => a.Email, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(a => a.Email, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(a => a.Email, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(a => a.Password, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.PasswordFor(a => a.Password, new { htmlAttributes = new { @class = "form-control" } })
            @*@Html.HiddenFor(a => a.ConfirmedPassword, new { Value = ViewBag.password })*@                        @*because ModelState checks also ConfirmedPassword*@
            @*@Html.ValidationMessageFor(a => a.Password, "", new { @class = "text-danger" })*@
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            @Html.ActionLink("If you don't have an account, sign up.", "Register", "Register")
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Log in" class="btn btn-default" />
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-2">
            <p>@ViewBag.LoginMessage</p>
        </div>
    </div>

</div>
}



<div>
    @Html.ActionLink("Back", "Index", "Home")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
